            <tr>
                <td class="alnright_s">Visit Date:</td>
                <td class="alnleft_s">
                    <encounterDate default="now" showTime="false" allowFutureDates="false"/>
                </td>
                <td class="alnright_s">Enrolled by:</td>
                <td class="alnleft_s">
                    <encounterProvider />
                </td>
